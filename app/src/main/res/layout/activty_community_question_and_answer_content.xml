<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDE6E6"
    tools:context=".Community.Community_NoticeContentActivity">
    <!--게시글 작성-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#EDE6E6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:textSize="18sp"
                    android:textColor="#F5A56C"
                    android:textColorHint="#B6B3B3"
                    android:text="번호"
                    android:layout_marginRight="10sp"/>

                <TextView
                    android:id="@+id/who"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:textSize="18sp"
                    android:textColor="#0B0B0B"
                    android:textColorHint="#B6B3B3"
                    android:text="작성자"
                    android:layout_toRightOf="@id/number"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:textColor="#0B0B0B"
                    android:textColorHint="#B6B3B3"
                    android:text="날짜"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/write_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="#EDE6E6"
                android:fontFamily="@font/nanumsquareb"
                android:hint="글 제목"
                android:textColor="#0B0B0B"
                android:textColorHint="#B6B3B3"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/write_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/a_rectangle"
                android:fontFamily="@font/nanumbarunpenb"
                android:hint="글 내용"
                android:padding="10sp"
                android:textColor="#0B0B0B"
                android:minHeight="350sp"
                android:textColorHint="#B6B3B3"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:text="삭제" />

                <Button
                    android:id="@+id/modfiy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:text="수정" />

            </LinearLayout>

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="답글"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="300sp">

                <ListView
                    android:id="@+id/contentListView"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="16dp"
                    android:nestedScrollingEnabled="true"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>