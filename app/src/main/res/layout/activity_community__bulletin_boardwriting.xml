<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDE6E6"
    tools:context=".Community.Community_NoticeContentActivity">
    <!--게시글 작성-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#EDE6E6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:textSize="18sp"
                    android:textColor="#F5A56C"
                    android:textColorHint="#B6B3B3"
                    android:text="번호" />

                <TextView
                    android:id="@+id/who"
                    android:layout_width="4dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:textSize="18sp"
                    android:textColor="#0B0B0B"
                    android:textColorHint="#B6B3B3"
                    android:text="작성자" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="right"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:textColor="#0B0B0B"
                    android:textColorHint="#B6B3B3"
                    android:text="날짜" />
            </LinearLayout>

            <TextView
                android:id="@+id/write_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="#EDE6E6"
                android:fontFamily="@font/nanumbarunpenb"
                android:hint="글 제목"
                android:textColor="#0B0B0B"
                android:textColorHint="#B6B3B3"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_notice_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:hint="첨부파일"
                    android:textColor="#0B0B0B"
                    android:textColorHint="#0B0B0B"
                    android:textSize="17sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/notice_file"
                android:layout_width="match_parent"
                android:background="@drawable/figma_text1"
                android:layout_height="68dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp">

            </ListView>

            <TextView
                android:id="@+id/write_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/a_rectangle"
                android:fontFamily="@font/nanumbarunpenb"
                android:hint="글 내용"
                android:padding="10sp"
                android:textColor="#0B0B0B"
                android:minHeight="350sp"
                android:textColorHint="#B6B3B3"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:text="삭제" />

                <Button
                    android:id="@+id/modfiy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/nanumbarunpenb"
                    android:text="수정" />

            </LinearLayout>

            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="답글"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/contentListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>