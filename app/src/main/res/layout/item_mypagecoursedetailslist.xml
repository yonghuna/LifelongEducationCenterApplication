<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <!--수강내역 아이템 리스트
        -->

    <!--activity_my_page__course_details.xml-->

    <LinearLayout
        android:id="@+id/gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp">


        <TextView
            android:id="@+id/coursedetailsCoursename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:hint="강좌명"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coursedetailsYearsemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="연도/학기"
                android:fontFamily="@font/nanumbarunpenb"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coursedetailsCertificateofCompletion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="수료증명서"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:fontFamily="@font/nanumbarunpenb"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coursedetailspayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="결제"
                android:gravity="center"
                android:fontFamily="@font/nanumbarunpenb"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
            <!--
               외국어 과정 수강신청 버튼, 상세보기 버튼
            -->

            <Button
                android:id="@+id/btpayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="결제"
                android:fontFamily="@font/nanumbarunpenb"
                app:backgroundTint="#FF6D00" />

            <Button
                android:id="@+id/btcoursedetail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#C82020"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="상세보기"
                app:backgroundTint="#00ACC1" />

            <Button
                android:id="@+id/btcoursedetail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#43A047"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="수강취소" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>