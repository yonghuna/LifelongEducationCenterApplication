<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_login"
    android:orientation="vertical">

    <!--
              교양 과정 수강신청 리스트 아이템
            -->

    <TextView
        android:id="@+id/LiberalArtsCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_enrolment_backgroung"
        android:hint="강좌명"
        android:fontFamily="@font/nanumbarunpenb"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/listLiberalArtsCourseLecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_login"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/LiberalArtsCourseLecturePeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="교육기간" />

        <TextView
            android:id="@+id/LiberalArtsCourseLectureProfessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="교수진" />

        <TextView
            android:id="@+id/LiberalArtsCourseLectureTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="수업시간" />

        <TextView
            android:id="@+id/LiberalArtsCourseLectureStudyfee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="학습비" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <!--
               교양 과정 수강신청 버튼, 상세보기 버튼
            -->
            <Button
                android:id="@+id/LiberalArtsCourseEnrolment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="수강신청"
                app:backgroundTint="#E53935" />

            <Button
                android:id="@+id/LiberalArtsCourseEnrolment2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nanumbarunpenb"
                android:layout_marginLeft="10dp"
                android:text="상세보기"
                app:backgroundTint="#43A047" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>