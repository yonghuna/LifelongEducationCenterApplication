<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE6E6"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--
        그림
    -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/mainBackGroundImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/sunmoon" />
        <!--
            강좌정보(RecyclerView로 대체할 수 있음.)
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/figma_text1"
                    android:gravity="right"
                    android:padding="5sp"
                    android:text=""
                    android:textColor="#000111"
                    android:textSize="13sp" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="2sp"
                android:clickable="true"
                android:gravity="center"
                android:padding="10sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/figma_button"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/figma_rectangle"
            android:orientation="vertical"
            android:minHeight="10sp">

            <TextView
                android:id="@+id/mainLecture"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareb"
                android:paddingLeft="25sp"
                android:text="수강 강좌"
                android:textColor="#F5A56C"
                android:textSize="20sp"/>

            <View
                android:layout_width="350dp"
                android:layout_height="1sp"
                android:layout_gravity="center"
                android:background="@drawable/figma_line"/>

            <ListView
                android:id="@+id/listLecture"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"/>
        </LinearLayout>


            <!--
                공지사항(RecyclerView로 대체할 수 있음.)
            -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@drawable/figma_rectangle"
            android:orientation="vertical"
            android:minHeight="150sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="공지사항"
                    android:paddingLeft="25sp"
                    android:textColor="#F5A56C"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/notice_addbutton"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/ic_add"
                    android:clickable="true"
                    android:fontFamily="@font/nanumbarunpenb"
                    app:backgroundTint="#636E81" />

            </LinearLayout>
            <View
                android:layout_width="350dp"
                android:layout_height="1sp"
                android:layout_gravity="center"
                android:background="@drawable/figma_line"/>

            <ListView
                android:id="@+id/listNoticed"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"/>
        </LinearLayout>

        <!--
            기타정보(RecyclerView로 대체할 수 있음.)
        -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#B5B5B5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:padding="6dp"
                        android:textColor="#EFE5E5"
                        android:textColorLink="#EFE5E5"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/private1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:padding="6dp"
                        android:textColor="#EFE5E5"
                        android:textColorLink="#EFE5E5"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B5B5B5"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="6dp"
                        android:text="충남 아산시 탕정면 선문로221번길 70 선문대학교 주산학평생교육원 보건의료관 513호 TEL: 041-530-8345
        Copyrightⓒ2021 SUNMOON University., All rights reserved."
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/drawer_view" />


</androidx.drawerlayout.widget.DrawerLayout>